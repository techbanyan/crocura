.navbar.header-nav.navbar-fixed-top
	.navbar-inner
		.container-fluid
			.row-fluid
				.span12
					=link_to image_tag("Crocura Logo.png"), root_url, :class=> "brand"
					%ul(class="nav header-top")
						%li
							=link_to "Home", root_url
						%li
							-if current_user
								=link_to "My Feed and Likes", profile_path, :class => "header-top-my-profile-link"
						%li
							-if current_user
								= link_to "Logout", signout_path
							-else
								-session[:return_to] = "#{request.protocol + request.host}:#{request.port.to_s + request.fullpath}"
								=link_to "Sign In with Instagram", "/auth/instagram"
					%ul(class="nav header-top pull-right")
						%li
							=link_to "FAQ", faq_path
						%li
							=link_to "About", about_path
						%li
							=link_to "Blog", "http://blog.crocura.com", :target => "_blank"