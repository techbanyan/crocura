.photo-box-likes-box
	.row-fluid
		.span12
			.span3
				#{photo["likes"]["count"]} Likes
			.span1
				-if current_user
					-if photo["user_has_liked"] == FALSE || photo["user_has_liked"] == "false"
						=link_to 'Like', photos_like_path(:photo_id => photo["id"]), :class => "like-icon heart-empty", :remote => true
					-elsif photo["user_has_liked"] == TRUE || photo["user_has_liked"] == "true"
						=link_to 'Liked', photos_like_path(:photo_id => photo["id"]), :class => "unlike-icon heart-full", :remote => true
			=render :partial => "photos/likes_show", :locals => {:photo_id => photo["id"], :likes => photo["likes"]["data"]}