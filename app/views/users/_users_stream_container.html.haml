.stream-container
	-if current_user && @query == NIL
		-if media.count == 0
			=render :partial => "profile/no_photos_found"	
		-else
			.whitespace50
			=render :partial => "users/stream", :locals => { :media => media }
			.whitespace25
			-if show_more_bar == true
				=render :partial => "users/show_more_bar", :locals => {:id => @user_id, :query => @query}
	-elsif @query == "followers" || @query == "following"
		-if media.count == 0
			=render :partial => "profile/no_users_found"
		-else
			.whitespace50
			=render :partial => "users/followers_following_stream", :locals => {:media => media}
			.whitespace25
			-if show_more_bar == true
				=render :partial => "users/show_more_bar", :locals => {:id => @user_id, :query => @query}